  <div class="col-md-3">
    <h2>User info</h2>
    <%= attachment_image_tag user, :profile_image, :fill, 100, 100, format: 'jpeg', fallback: "no_image.jpg" %>
    <table class="table">
      <tbody>
        <tr>
          <th>name</th>
          <th><%= user.name %></th>
        </tr>
        <tr>
          <th>introduction</th>
          <th><%= user.introduction %></th>
        </tr>
      </tbody>
    </table>

    <div class="row">
      <%= link_to "", edit_user_path(user.id), class: "btn btn-outline-secondary btn-block fas fa-user-cog edit_user_23177" %>
    </div>

    <h2 class="mt-3">New book</h2>
    <%= form_with model: @book, url: books_path, method: :post, local:true do |f| %>
      <div class="form-group field">
        <%= f.label :title, "Title" %><br>
        <%= f.text_field :title, value: "", class: "form-control" %>
      </div>

      <div class="form-group field">
        <%= f.label :body, "Opinion" %><br>
        <%= f.text_area :body, value: "", class: "form-control" %>
      </div>

      <div class="form-group">
        <%= f.submit "Create Book", class: "btn btn-success" %>
      </div>
    <% end %>
  </div>