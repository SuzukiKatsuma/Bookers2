<%= render 'books/user', user: @user %>

<div class="col-md-8 offset-md-1">
  <h2>Book detail</h2>

  <table class="table">
    <tbody>
      <tr>
        <th>
          <%= link_to user_path(@user) do %>
            <%= attachment_image_tag @user, :profile_image, :fill, 40, 40, format: 'jpeg', fallback: "no_image.jpg" %>
            <%= @user.name %>
          <% end %>
        </th>
        <th>
          <%= link_to book_path(@user) do %>
            <%= @book.title %>
          <% end %>
          </th>
        <th><%= @book.body %></th>
        <th>
          <% if @book.user == current_user %>
            <%= link_to "Edit", edit_book_path(@book), class: "btn btn-sm btn-success" %>
          <% end %>
        </th>
        <th>
          <% if @book.user == current_user %>
            <%= link_to "Destroy", book_path(@book), method: :delete, data: {confirm: "Are you sure?"}, class: "btn btn-sm btn-danger" %>
          <% end %>
        </th>
      </tr>
    </tbody>
  </table>
</div>